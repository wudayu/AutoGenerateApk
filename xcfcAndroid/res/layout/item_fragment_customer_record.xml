<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/rl_record_box"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_item_customer_record"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp" >
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="已成交"
            android:textColor="#FF333333"
            android:textSize="@dimen/px30" />
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ico_date_score"
            android:drawablePadding="5dp"
            android:gravity="right"
            android:text="2013-5-4"
            android:textColor="#999999"
            android:textSize="@dimen/px26" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_date"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:background="@color/border_line" />
        <TextView
            android:id="@+id/tv_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_status"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_date"
            android:layout_marginTop="15dp"
            android:text="备注"
            android:textColor="@color/col_hint_text"
            android:textSize="@dimen/px30" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_dueYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/iv_cicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical|center_horizontal"
            android:src="@drawable/timeline_point_on" />
    </RelativeLayout>
</RelativeLayout>