<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_five"
    android:layout_marginRight="@dimen/dp_five"
    android:layout_marginTop="@dimen/dp_ten"
    android:background="@color/col_words_active_white"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_ten"
        android:orientation="horizontal" >
        <View
            android:id="@+id/left_line"
            android:layout_width="@dimen/dp_six"
            android:layout_height="@dimen/dp_twenty"
            android:background="@color/letter_main_red" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_five"
            android:text="@string/txt_tag_houses_map"
            android:textColor="@color/letter_main_red"
            android:textSize="@dimen/px26" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_ten"
        android:layout_marginRight="@dimen/dp_ten"
        android:layout_marginTop="@dimen/dp_ten"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/iv_map"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_hundred_twenty"
            android:clickable="true"
            android:visibility="visible" />
        <com.baidu.mapapi.map.MapView
            android:id="@+id/bmap_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_hundred_twenty"
            android:clickable="true"
            android:visibility="gone" >
        </com.baidu.mapapi.map.MapView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_ten"
        android:layout_marginTop="@dimen/dp_ten"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_ten" >
        <ImageView
            android:id="@+id/iv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ico_build_map"
            android:contentDescription="@null" />
        <TextView
            android:id="@+id/txt_map_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_five"
            android:textColor="@color/letter_grey_deep_3"
            android:textSize="@dimen/px24" />
    </LinearLayout>
</LinearLayout>