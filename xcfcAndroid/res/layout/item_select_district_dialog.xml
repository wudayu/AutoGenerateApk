<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/col_words_active_white"
    android:orientation="horizontal" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical" >
        <TextView
            android:id="@+id/tv_selected_districts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:text="不限"
            android:textColor="@drawable/seclector_click_item_district_txt"
            android:textSize="@dimen/px30" >
        </TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_forty_five"
        android:layout_toRightOf="@+id/rl_left"
        android:gravity="center_vertical" >
        <ImageView
            android:id="@+id/iv_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_ten"
            android:contentDescription="null"
            android:src="@drawable/qu_ico_ok" >
        </ImageView>
    </RelativeLayout>
</RelativeLayout>