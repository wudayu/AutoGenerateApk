<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_twenty"
        android:layout_marginTop="@dimen/dp_twentyfive"
        android:gravity="center"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="@dimen/dp_sixty"
            android:layout_height="@dimen/dp_sixty"
            android:background="@drawable/btn_weixin_hy" />
        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_ten"
            android:textColor="@color/letter_grey_deep_6"
            android:textSize="@dimen/px32" />
    </LinearLayout>
</LinearLayout>