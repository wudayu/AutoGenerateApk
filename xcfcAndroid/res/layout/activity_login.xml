<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_app"
    tools:context=".LoginActivity" >
    <!-- 顶端搜索大块 -->
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_rl_personal_info_fragment_mine" >
        <ImageView
            android:id="@+id/iv_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/login_bg" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/width_top_icon_houses_detail"
                android:layout_height="@dimen/height_top_icon_houses_detail"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_ten"
                android:layout_marginTop="@dimen/dp_twenty"
                android:background="@drawable/btn_back"
                android:contentDescription="@null" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_user_image"
            android:layout_width="@dimen/width_rl_user_image_fragment_mine"
            android:layout_height="@dimen/height_rl_user_image_fragment_mine"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_fifty"
            android:background="@drawable/userimg_box" >
            <ImageView
                android:id="@+id/iv_user_image"
                android:layout_width="@dimen/side_iv_user_image_fragment_mine"
                android:layout_height="@dimen/side_iv_user_image_fragment_mine"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_eight"
                android:contentDescription="@null" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_top"
        android:layout_marginTop="@dimen/marging_top_login"
        android:background="@android:color/transparent"
        android:paddingBottom="@dimen/dp_twenty" >
        <RelativeLayout
            android:id="@+id/rl_login_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_ll_sheet_fragment_recom_child"
            android:layout_marginLeft="@dimen/dp_ten"
            android:layout_marginRight="@dimen/dp_ten"
            android:background="@drawable/shape_login_edt_bg"
            android:paddingLeft="@dimen/dp_eight"
            android:paddingRight="@dimen/dp_eight" >
            <ImageView
                android:id="@+id/iv_login_username"
                android:layout_width="@dimen/dp_sixteen"
                android:layout_height="@dimen/dp_sixteen"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_eight"
                android:background="@drawable/login_ico_username"
                android:contentDescription="@null" />
            <EditText
                android:id="@+id/edt_login_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_edt_ll_sheet_fragment_recom_child"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_login_username"
                android:background="@android:color/transparent"
                android:hint="@string/hint_edt_login_phone"
                android:singleLine="true"
                android:textColorHint="@color/col_words_inactive_grey"
                android:textSize="@dimen/px32" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_login_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_ll_sheet_fragment_recom_child"
            android:layout_below="@+id/rl_login_account"
            android:layout_marginLeft="@dimen/dp_ten"
            android:layout_marginRight="@dimen/dp_ten"
            android:layout_marginTop="@dimen/dp_fifteen"
            android:background="@drawable/shape_login_edt_bg"
            android:paddingLeft="@dimen/dp_eight"
            android:paddingRight="@dimen/dp_eight" >
            <ImageView
                android:id="@+id/iv_login_password"
                android:layout_width="@dimen/dp_sixteen"
                android:layout_height="@dimen/dp_sixteen"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_eight"
                android:background="@drawable/login_ico_password"
                android:contentDescription="@null" />
            <EditText
                android:id="@+id/edt_login_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_edt_ll_sheet_fragment_recom_child"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_login_password"
                android:background="@android:color/transparent"
                android:hint="@string/hint_edt_login_password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColorHint="@color/col_words_inactive_grey"
                android:textSize="@dimen/px32" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_login_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_ll_sheet_fragment_recom_child"
            android:layout_below="@+id/rl_login_password"
            android:layout_marginLeft="@dimen/dp_ten"
            android:layout_marginRight="@dimen/dp_ten"
            android:layout_marginTop="@dimen/dp_thirty"
            android:background="@drawable/ico_bj"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_eight"
            android:paddingRight="@dimen/dp_eight" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_login_str"
                android:textColor="@color/col_words_active_white"
                android:textSize="@dimen/px36" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_login_qq_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_ll_sheet_fragment_recom_child"
            android:layout_below="@+id/rl_login_btn"
            android:layout_marginLeft="@dimen/dp_ten"
            android:layout_marginRight="@dimen/dp_ten"
            android:layout_marginTop="@dimen/dp_fifteen"
            android:gravity="center|right"
            android:paddingLeft="@dimen/dp_eight"
            android:paddingRight="@dimen/dp_eight"
            android:visibility="gone" >
            <RelativeLayout
                android:id="@+id/rl_login_qq"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_ll_sheet_fragment_recom_child" >
                <ImageView
                    android:id="@+id/iv_login_qq"
                    android:layout_width="@dimen/dp_fifteen"
                    android:layout_height="@dimen/dp_sixteen"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_five"
                    android:background="@drawable/login_ico_qq"
                    android:contentDescription="@null" />
                <TextView
                    android:id="@+id/tv_login_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_login_qq"
                    android:text="@string/txt_login_qq"
                    android:textColor="@color/col_words_inactive_grey"
                    android:textSize="@dimen/px30" />
                <ImageView
                    android:id="@+id/iv_login_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_five"
                    android:layout_toRightOf="@+id/tv_login_qq"
                    android:background="@drawable/ico_grayarrow"
                    android:contentDescription="@null" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" >
            <RelativeLayout
                android:id="@+id/rl_login_password_forget"
                android:layout_width="@dimen/width_login_password_forget"
                android:layout_height="@dimen/height_ll_sheet_fragment_recom_child"
                android:background="@drawable/shape_block_fragment_mine"
                android:gravity="center" >
                <ImageView
                    android:id="@+id/iv_login_password_forget"
                    android:layout_width="@dimen/dp_sixteen"
                    android:layout_height="@dimen/dp_sixteen"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_five"
                    android:background="@drawable/login_ico_forget"
                    android:contentDescription="@null" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_login_password_forget"
                    android:text="@string/txt_login_password_forget"
                    android:textColor="@color/letter_main_red"
                    android:textSize="@dimen/px36" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_login_register"
                android:layout_width="@dimen/width_login_password_forget"
                android:layout_height="@dimen/height_ll_sheet_fragment_recom_child"
                android:layout_marginLeft="@dimen/dp_ten"
                android:layout_toRightOf="@+id/rl_login_password_forget"
                android:background="@drawable/shape_block_fragment_mine"
                android:gravity="center" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/txt_login_register"
                    android:textColor="@color/letter_main_red"
                    android:textSize="@dimen/px36" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>