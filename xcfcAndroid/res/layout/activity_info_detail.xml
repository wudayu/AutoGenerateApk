<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_app" >
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_ll_top_fragment_houses"
        android:background="@color/main_app_bar" >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/width_top_icon_houses_detail"
            android:layout_height="@dimen/height_top_icon_houses_detail"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_ten"
            android:background="@drawable/btn_back"
            android:contentDescription="@null" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/txt_activity_info_detail"
            android:textColor="@android:color/white"
            android:textSize="@dimen/px40" />
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="@dimen/width_top_icon_houses_detail"
            android:layout_height="@dimen/height_top_icon_houses_detail"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_ten"
            android:background="@drawable/selector_click_share"
            android:contentDescription="@null"
            android:visibility="visible" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_top" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_ten" >
            <TextView
                android:id="@+id/txt_info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:maxLength="60"
                android:textAlignment="center"
                android:textSize="@dimen/px38" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_eight"
                android:layout_marginTop="@dimen/dp_eight"
                android:orientation="horizontal" >
                <ImageView
                    android:id="@+id/iv_time_clock"
                    android:layout_width="@dimen/dp_ten"
                    android:layout_height="@dimen/dp_ten"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ico_date"
                    android:contentDescription="@null"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/txt_info_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_ten"
                    android:textColor="@color/letter_grey_deep_10" />
            </LinearLayout>
            <!--  android:scaleType="fitXY"  -->
            <ImageView
                android:id="@+id/iv_info_detail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_iv_info_detail"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@null"
                android:scaleType="centerCrop" />
            <TextView
                android:id="@+id/txt_info_context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_ten"
                android:textAlignment="center"
                android:textSize="@dimen/px24" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>