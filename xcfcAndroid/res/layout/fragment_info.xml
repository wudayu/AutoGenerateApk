<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_app" >
    <LinearLayout
        android:id="@+id/ll_indicate_words"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_ll_indicate_words_fragment_info"
        android:layout_below="@id/rl_top"
        android:background="@color/main_app_bar"
        android:baselineAligned="false"
        android:orientation="horizontal" >
        <RelativeLayout
            android:id="@+id/rl_newcity_activities"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1" >
            <TextView
                android:id="@+id/txt_newcity_activities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/txt_newcity_activities"
                android:textColor="@color/col_words_active_white"
                android:textSize="@dimen/px32" />
            <RelativeLayout
                android:id="@+id/rl_unread_newcity_activities"
                android:layout_width="@dimen/side_rl_message_hint_fragment_houses"
                android:layout_height="@dimen/side_rl_message_hint_fragment_houses"
                android:layout_alignRight="@id/txt_newcity_activities"
                android:layout_alignTop="@id/txt_newcity_activities"
                android:layout_marginRight="@dimen/margin_right_rl_unread_houses_activities"
                android:layout_marginTop="@dimen/margin_top_rl_unread_houses_activities"
                android:background="@drawable/ico_mynewsnum"
                android:visibility="gone" >
                <TextView
                    android:id="@+id/txt_unread_newcity_activities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:includeFontPadding="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/px20"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_houses_activities"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1" >
            <TextView
                android:id="@+id/txt_houses_activities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/txt_houses_activities"
                android:textColor="@color/txt_color_black"
                android:textSize="@dimen/px32" />
            <RelativeLayout
                android:id="@+id/rl_unread_houses_activities"
                android:layout_width="@dimen/side_rl_message_hint_fragment_houses"
                android:layout_height="@dimen/side_rl_message_hint_fragment_houses"
                android:layout_alignRight="@id/txt_houses_activities"
                android:layout_alignTop="@id/txt_houses_activities"
                android:layout_marginRight="@dimen/margin_right_rl_unread_houses_activities"
                android:layout_marginTop="@dimen/margin_top_rl_unread_houses_activities"
                android:background="@drawable/ico_mynewsnum"
                android:visibility="gone" >
                <TextView
                    android:id="@+id/txt_unread"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:includeFontPadding="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/px20"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_my_messages"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1" >
            <TextView
                android:id="@+id/txt_my_messages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/txt_my_messages"
                android:textColor="@color/txt_color_black"
                android:textSize="@dimen/px32" />
            <RelativeLayout
                android:id="@+id/rl_unread_my_messages"
                android:layout_width="@dimen/side_rl_message_hint_fragment_houses"
                android:layout_height="@dimen/side_rl_message_hint_fragment_houses"
                android:layout_alignRight="@id/txt_my_messages"
                android:layout_alignTop="@id/txt_my_messages"
                android:layout_marginRight="@dimen/margin_right_rl_unread_houses_activities"
                android:layout_marginTop="@dimen/margin_top_rl_unread_houses_activities"
                android:background="@drawable/ico_mynewsnum"
                android:visibility="gone" >
                <TextView
                    android:id="@+id/txt_unread_my_messages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:includeFontPadding="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/px20"
                    android:visibility="visible" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <com.movitech.grande.views.UnderlinePageIndicator
        android:id="@+id/indicator_fragment_info"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_indicator_fragment_info"
        android:layout_below="@id/ll_indicate_words"
        android:background="@color/grande_col_line_viewpager" />
    <LinearLayout
        android:id="@+id/ll_indicate_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_indicate_words"
        android:layout_marginTop="-7dp"
        android:baselineAligned="false"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/news_topnav" />
        <ImageView
            android:id="@+id/iv_center"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/news_topnav"
            android:visibility="invisible" />
        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/news_topnav"
            android:visibility="invisible" />
    </LinearLayout>
    <com.movitech.grande.views.NoSlideViewPager
        android:id="@+id/vp_fragment_info"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/indicator_fragment_info" />
</RelativeLayout>