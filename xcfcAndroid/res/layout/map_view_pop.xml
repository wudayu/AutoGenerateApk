<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent" >
    <RelativeLayout
        android:layout_width="@dimen/dp_hundred_seventy"
        android:layout_height="@dimen/dp_fifty"
        android:background="@drawable/ico_mapbg" >
        <RelativeLayout
            android:id="@+id/rl_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >
            <TextView
                android:id="@+id/txt_map_build_name"
                android:layout_width="@dimen/dp_hundred_twenty"
                android:layout_height="@dimen/dp_forty"
                android:gravity="center"
                android:text="新城"
                android:textColor="@color/letter_main_red"
                android:textSize="@dimen/px34" />
        </RelativeLayout>
        <View
            android:id="@+id/v_yline"
            android:layout_width="@dimen/dp_one"
            android:layout_height="@dimen/dp_forty_one"
            android:layout_toRightOf="@id/rl_name"
            android:background="@color/col_words_inactive_grey" />
        <RelativeLayout
            android:id="@+id/rl_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_forty"
            android:layout_toRightOf="@id/v_yline" >
            <ImageView
                android:id="@+id/iv_map_build"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/ico_mapgo" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>