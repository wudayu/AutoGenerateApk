<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_five"
    android:layout_marginRight="@dimen/dp_five"
    android:layout_marginTop="@dimen/dp_eight"
    android:background="@color/col_words_active_white"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_ten"
        android:orientation="horizontal" >
        <View
            android:id="@+id/left_line"
            android:layout_width="@dimen/dp_six"
            android:layout_height="@dimen/dp_twenty"
            android:background="@color/letter_main_red" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_five"
            android:text="@string/txt_tag_houses_traffic"
            android:textColor="@color/letter_main_red"
            android:textSize="@dimen/px26" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_traffic_build"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_ten"
        android:paddingTop="@dimen/dp_five"
        android:visibility="visible" >
        <TextView
            android:id="@+id/tv_traffic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/letter_grey_deep_3"
            android:textSize="@dimen/px24" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_traffic_fold"
        android:layout_width="@dimen/dp_forty"
        android:layout_height="@dimen/dp_twenty"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_ten"
        android:layout_marginTop="@dimen/dp_five"
        android:gravity="center"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/iv_traffic_fold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_unfold"
            android:contentDescription="@null" />
    </LinearLayout>
</LinearLayout>