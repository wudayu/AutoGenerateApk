<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_ten"
    android:background="@color/main_app"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/ll_rmb_commmission"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_ll_rmb_commmission"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/txt_hint_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_ten"
            android:text="@string/hint_money"
            android:textColor="@color/letter_grey_deep_6"
            android:textSize="@dimen/px28" />
        <TextView
            android:id="@+id/txt_commission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_five"
            android:layout_toRightOf="@id/txt_hint_money"
            android:textColor="@color/col_text_recommend_yellow"
            android:textSize="@dimen/px36" />
        <ImageView
            android:id="@+id/iv_commission"
            android:layout_width="@dimen/dp_fifteen"
            android:layout_height="@dimen/dp_fifteen"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_three"
            android:layout_toRightOf="@id/txt_commission"
            android:background="@drawable/ico_yong"
            android:contentDescription="@null" />
        <Button
            android:id="@+id/btn_recommend_immediately"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/btn_appointment_immediately"
            android:background="@color/col_text_recommend_yellow"
            android:paddingLeft="@dimen/dp_eleven"
            android:paddingRight="@dimen/dp_eleven"
            android:text="@string/btn_recommend_immediately"
            android:textColor="@color/letter_grey_deep_full"
            android:textSize="@dimen/px30" />
        <Button
            android:id="@+id/btn_appointment_immediately"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_ten"
            android:layout_marginRight="@dimen/dp_five"
            android:background="@color/col_text_appoint_blue"
            android:paddingLeft="@dimen/dp_eleven"
            android:paddingRight="@dimen/dp_eleven"
            android:text="@string/btn_appointment_immediately"
            android:textColor="@color/letter_grey_deep_full"
            android:textSize="@dimen/px30" />
    </RelativeLayout>
</LinearLayout>