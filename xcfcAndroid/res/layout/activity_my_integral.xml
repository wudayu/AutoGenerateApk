<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_ll_top_fragment_houses"
        android:background="@color/main_app_bar" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/txt_my_integral"
            android:textColor="@android:color/white"
            android:textSize="@dimen/px40" />
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/width_top_icon_houses_detail"
            android:layout_height="@dimen/height_top_icon_houses_detail"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_ten"
            android:background="@drawable/btn_back"
            android:contentDescription="@null" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_customer_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_activity_my_integral"
        android:background="@color/letter_grey_deep_full" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_thirtytwo"
            android:orientation="vertical" >
            <com.movitech.grande.views.AutoScaleTextView
                android:id="@+id/tv_my_integral"
                android:layout_width="@dimen/dp_fifty"
                android:layout_height="@dimen/dp_fifty"
                android:background="@drawable/shape_big_circle_fragment_mine"
                android:gravity="center"
                android:padding="@dimen/dp_four"
                android:textColor="@android:color/white"
                android:textSize="@dimen/px32" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/txt_total_integral" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_integral_rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_thirteen"
            android:background="@drawable/shape_block_fragment_mine_setting"
            android:drawablePadding="@dimen/dp_ten"
            android:drawableRight="@drawable/ico_readmore"
            android:paddingBottom="@dimen/dp_ten"
            android:paddingLeft="@dimen/dp_twenty"
            android:paddingRight="@dimen/dp_twenty"
            android:paddingTop="@dimen/dp_ten"
            android:text="@string/btn_integral_rule"
            android:visibility="gone" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_twelve"
        android:layout_marginTop="@dimen/dp_eight"
        android:text="@string/txt_integral_record"
        android:textColor="@color/letter_grey_deep_8"
        android:textSize="@dimen/px26" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_twelve"
            android:background="@drawable/timeline_yline"
            android:contentDescription="@null" />
        <ListView
            android:id="@+id/lv_customer_integral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:cacheColorHint="@null"
            android:divider="@null"
            android:fadingEdge="none"
            android:listSelector="@android:color/transparent"
            android:scrollingCache="false" >
        </ListView>
    </RelativeLayout>
</LinearLayout>