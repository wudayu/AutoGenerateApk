<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_five"
    android:layout_marginRight="@dimen/dp_five"
    android:layout_marginTop="@dimen/dp_eight"
    android:background="@color/col_words_active_white"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_ten"
        android:orientation="horizontal" >
        <View
            android:id="@+id/left_line"
            android:layout_width="@dimen/dp_six"
            android:layout_height="@dimen/dp_twenty"
            android:background="@color/letter_main_red" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_five"
            android:text="@string/txt_pic_houses_type"
            android:textColor="@color/letter_main_red"
            android:textSize="@dimen/px26" />
    </LinearLayout>
    <!-- 推荐楼盘横向滚动 -->
    <HorizontalScrollView
        android:id="@+id/hsv_houses_style_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >
        <LinearLayout
            android:id="@+id/ll_hustyle_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>