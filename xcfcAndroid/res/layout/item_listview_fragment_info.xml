<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/dp_twelve" >
    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="@dimen/dp_eighty"
        android:layout_height="@dimen/dp_sixty"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/dp_ten"
        android:layout_marginLeft="@dimen/dp_twelve"
        android:layout_marginRight="@dimen/dp_twelve"
        android:layout_marginTop="@dimen/dp_ten"
        android:contentDescription="@null"
        android:scaleType="fitXY" />
    <TextView
        android:id="@+id/txt_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_item"
        android:layout_toRightOf="@id/iv_item"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@android:color/black"
        android:textSize="@dimen/px28" />
    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/txt_item"
        android:layout_marginTop="@dimen/dp_ten"
        android:drawableLeft="@drawable/ico_date"
        android:drawablePadding="@dimen/dp_five"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_ten"
        android:textColor="@color/letter_grey_deep_10"
        android:textSize="@dimen/px24" />
</RelativeLayout>