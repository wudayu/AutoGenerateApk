<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item_mine_team" >
    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_seventy" >
        <com.movitech.grande.views.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_user_avater"
            android:layout_width="@dimen/dp_fifty_six"
            android:layout_height="@dimen/dp_fifty_six"
            android:layout_marginLeft="@dimen/dp_fifteen"
            android:layout_marginRight="@dimen/dp_ten"
            android:layout_marginTop="@dimen/dp_seven"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/userimg_default"
            app:border_color="@color/col_words_active_white"
            app:border_width="@dimen/dp_two"
            app:mutate_background="true"
            app:oval="true" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_user_avater" >
            <TextView
                android:id="@+id/txt_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张晓丽"
                android:textColor="@color/col_mine_team_username"
                android:textSize="@dimen/px30" />
            <TextView
                android:id="@+id/txt_wait_commission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_user_name"
                android:layout_marginTop="@dimen/dp_ten"
                android:text="@string/institution_wait_commission"
                android:textColor="@color/col_mine_team_wait_commissiom"
                android:textSize="@dimen/px26" />
            <TextView
                android:id="@+id/txt_wait_commission_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_user_name"
                android:layout_marginLeft="@dimen/dp_ten"
                android:layout_marginTop="@dimen/dp_ten"
                android:layout_toRightOf="@id/txt_wait_commission"
                android:text="5000"
                android:textColor="@color/col_mine_team_recom"
                android:textSize="@dimen/px26" />
            <TextView
                android:id="@+id/txt_recom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/txt_wait_commission"
                android:layout_marginLeft="@dimen/margin_left_recom"
                android:text="@string/institution_recom"
                android:textColor="@color/col_mine_team_wait_commissiom"
                android:textSize="@dimen/px26" />
            <TextView
                android:id="@+id/txt_recom_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_user_name"
                android:layout_marginLeft="@dimen/dp_ten"
                android:layout_marginTop="@dimen/dp_ten"
                android:layout_toRightOf="@id/txt_recom"
                android:text="9"
                android:textColor="@color/col_mine_team_recom"
                android:textSize="@dimen/px26" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_one"
        android:layout_below="@id/rl_item"
        android:background="@color/col_mine_team_line" />
</RelativeLayout>