<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_five"
    android:layout_marginRight="@dimen/dp_five"
    android:layout_marginTop="@dimen/dp_ten"
    android:background="@color/col_words_active_white"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_ten"
        android:orientation="horizontal" >
        <View
            android:id="@+id/left_line"
            android:layout_width="@dimen/dp_six"
            android:layout_height="@dimen/dp_twenty"
            android:background="@color/letter_main_red" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_five"
            android:text="@string/txt_tag_houses_introduction"
            android:textColor="@color/letter_main_red"
            android:textSize="@dimen/px26" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_ten"
            android:layout_marginTop="@dimen/dp_ten"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/txt_first_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/txt_first_opensell"
                android:textColor="@color/letter_grey_deep_6"
                android:textSize="@dimen/px24" />
            <TextView
                android:id="@+id/tv_open_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/txt_first_open"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_five"
                android:layout_toRightOf="@id/txt_first_open"
                android:textColor="@color/letter_grey_deep_6"
                android:textSize="@dimen/px24" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_ten"
            android:layout_marginTop="@dimen/dp_two"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_build_speciality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/txt_build_speciality"
                android:textColor="@color/letter_grey_deep_6"
                android:textSize="@dimen/px24" />
            <TextView
                android:id="@+id/tv_build_special"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_build_speciality"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_five"
                android:layout_toRightOf="@id/tv_build_speciality"
                android:textColor="@color/letter_grey_deep_6"
                android:textSize="@dimen/px24" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_introduce_build"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_ten"
                android:layout_marginTop="@dimen/dp_two"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/txt_building_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/txt_build_type"
                    android:textColor="@color/letter_grey_deep_6"
                    android:textSize="@dimen/px24" />
                <TextView
                    android:id="@+id/tv_build_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/txt_building_type"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_five"
                    android:layout_toRightOf="@id/txt_building_type"
                    android:textColor="@color/letter_grey_deep_6"
                    android:textSize="@dimen/px24" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_ten"
                android:layout_marginTop="@dimen/dp_two"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/txt_decoration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/txt_decoration_situation"
                    android:textColor="@color/letter_grey_deep_6"
                    android:textSize="@dimen/px24" />
                <TextView
                    android:id="@+id/tv_decoration_situation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/txt_decoration"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_five"
                    android:layout_toRightOf="@id/txt_decoration"
                    android:textColor="@color/letter_grey_deep_6"
                    android:textSize="@dimen/px24" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_ten"
                android:layout_marginTop="@dimen/dp_two"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/txt_build_floor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/txt_build_floorarea"
                    android:textColor="@color/letter_grey_deep_6"
                    android:textSize="@dimen/px24" />
                <TextView
                    android:id="@+id/tv_build_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/txt_build_floor"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_five"
                    android:layout_toRightOf="@id/txt_build_floor"
                    android:textColor="@color/letter_grey_deep_6"
                    android:textSize="@dimen/px24" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_ten"
                android:layout_marginTop="@dimen/dp_two"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/tv_build_equity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/txt_build_equity"
                    android:textColor="@color/letter_grey_deep_6"
                    android:textSize="@dimen/px24" />
                <TextView
                    android:id="@+id/tv_equity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_build_equity"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_five"
                    android:layout_toRightOf="@id/tv_build_equity"
                    android:textColor="@color/letter_grey_deep_6"
                    android:textSize="@dimen/px24" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_ten"
                android:layout_marginTop="@dimen/dp_two"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/txt_rate_greening"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/txt_rate_green"
                    android:textColor="@color/letter_grey_deep_6"
                    android:textSize="@dimen/px24" />
                <TextView
                    android:id="@+id/tv_rate_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/txt_rate_greening"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_five"
                    android:layout_toRightOf="@id/txt_rate_greening"
                    android:textColor="@color/letter_grey_deep_6"
                    android:textSize="@dimen/px24" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_ten"
                android:layout_marginTop="@dimen/dp_two"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/txt_cto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/txt_realestate_cto"
                    android:textColor="@color/letter_grey_deep_6"
                    android:textSize="@dimen/px24" />
                <TextView
                    android:id="@+id/tv_realestate_cto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/txt_cto"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_five"
                    android:layout_toRightOf="@id/txt_cto"
                    android:textColor="@color/letter_grey_deep_6"
                    android:textSize="@dimen/px24" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_ten"
                android:layout_marginTop="@dimen/dp_two"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/tv_del_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/txt_delivery_date"
                    android:textColor="@color/letter_grey_deep_6"
                    android:textSize="@dimen/px24" />
                <TextView
                    android:id="@+id/tv_delivery_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_del_date"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_five"
                    android:layout_toRightOf="@id/tv_del_date"
                    android:textColor="@color/letter_grey_deep_6"
                    android:textSize="@dimen/px24" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_twenty"
        android:layout_marginLeft="@dimen/dp_ten"
        android:layout_marginTop="@dimen/dp_five"
        android:gravity="center"
        android:orientation="horizontal" >
        <LinearLayout
            android:id="@+id/ll_introduce_fold"
            android:layout_width="@dimen/dp_forty"
            android:layout_height="@dimen/dp_twenty"
            android:gravity="center"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/iv_introduce_fold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_unfold"
                android:contentDescription="@null" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>