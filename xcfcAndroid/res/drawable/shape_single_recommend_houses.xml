<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 右方阴影 -->
    <item android:left="@dimen/width_layout_recommend_houses">
        <shape>
            <gradient
                android:endColor="@color/main_app"
                android:startColor="@color/col_shadow_start" />
        </shape>
    </item>
    <!-- 下方阴影 -->
    <item android:top="@dimen/height_layout_recommend_houses">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/main_app"
                android:startColor="@color/col_shadow_start" />
        </shape>
    </item>
</layer-list>